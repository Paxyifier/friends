<% if user_signed_in?  %>
<h1>Friends for <%=current_user.email%></h1>

<table class="table table-striped table-bordered table-hover">
  <thead class = "table-dark">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Twitter</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @friends.each do |friend| %>
    
    <% if friend.user == current_user %>
    <%#
        this if statement helps us to distinguish betweeen the two user's listing
    %>
      
    
      <tr>
        <td><%= link_to friend.first_name+' '+friend.last_name, friend %> <%=  %></td>
        <td><%= friend.email %></td>
        <td><%= friend.phone %></td>
        <td><%= friend.twitter %></td>
        <td><%= link_to 'Destroy', friend, method: :delete, data: { confirm: 'Are you sure?' } , class:"btn btn-danger"%></td>
      </tr>
    <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Friend', new_friend_path ,  class:"btn btn-dark" %>
<% else %>
<div class="card">
<div class="card-body">
<h1 class="card-title">
Please Sign up or sign in to continue
</h1>
<%= link_to 'Sign Up' , new_user_registration_path,class:"btn btn-dark" %>
<%= link_to 'Sign In' , new_user_session_path ,class:"btn btn-dark"%>
</div>
</div>
 
<% end %>