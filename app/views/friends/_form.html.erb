    <%= form.text_field :last_name, class:"form-control"  %>
  </div></div>

  <div  class = "mb-3 row  gx-5">
    <label class="col-sm-2 col-form-label"><%= form.label :email %></label><div class="col-sm-10">
    <%= form.text_field :email, class:"form-control"  %>
  </div></div>

  <div  class = "mb-3 row  gx-5">
    <label class="col-sm-2 col-form-label"><%= form.label :phone %></label><div class="col-sm-10">
    <%= form.text_field :phone, class:"form-control"  %>
  </div></div>

